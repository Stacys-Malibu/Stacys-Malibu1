<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Exam.Pregunta4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="Pregunta 4"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/red_200"

            />
        <TextView
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál es el sinónimo de palíndromo?"
            android:textSize="30dp"
            android:layout_margin="20dp"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="131dp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Racional"
            android:layout_margin="15dp"
            android:background="#6b6e75"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/c4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Integral"
            android:layout_margin="15dp"
            android:background="#6b6e75"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/d4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#6b6e75"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Capitúa"
             />

        <Button
            android:id="@+id/sig4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:background="@color/black_rusia"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"  />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>