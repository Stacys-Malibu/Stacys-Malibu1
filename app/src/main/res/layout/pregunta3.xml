<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Exam.Pregunta3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="Pregunta 3"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black_rusia"

            />
        <TextView
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Un objeto es fractal cuando:"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="131dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su estructura es asimetrica"
            android:layout_margin="15dp"
            android:background="#6b6e75"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/c3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su estructura se repite a las mismas escalas"
            android:layout_margin="15dp"
            android:background="#6b6e75"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/d3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su estructura se repite a diferentes escalas"
            android:layout_margin="15dp"
            android:background="#6b6e75"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sig3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:background="@color/red_200"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"  />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>